server {
    listen 443 default_server ssl http2;
    listen [::]:443 ssl http2;

    server_name chatgpt-neyroset.ru www.chatgpt-neyroset.ru;

    server_tokens off;

    ssl_certificate /etc/letsencrypt/live/chatgpt-neyroset.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/chatgpt-neyroset.ru/privkey.pem;


    location /favicon.ico {
        access_log off; log_not_found off;
    }

    location /free-users.txt {
        alias /users_files/free_users.txt;
    }

    location /premium-users.txt {
        alias /users_files/premium_users.txt;
    }

    location /tmp/ {
        alias /bot_tmp/;
    }

    location /static/ {
        alias /static/;
    }

    location / {
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://web:5000;
    }

}


server {
    listen 80;
    server_name chatgpt-neyroset.ru www.chatgpt-neyroset.ru;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://chatgpt-neyroset.ru$request_uri;
    }
}